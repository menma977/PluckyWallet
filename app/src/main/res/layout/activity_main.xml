<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background">

  <ProgressBar
      style="@style/Widget.AppCompat.ProgressBar"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:progressDrawable="@drawable/progressbar_circular"
      android:indeterminate="true"
      android:indeterminateDrawable="@drawable/progressbar_circular"
      android:background="@mipmap/ic_launcher_foreground"/>

  <ProgressBar
      android:id="@+id/progressBar"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:indeterminate="false"
      android:progressDrawable="@drawable/main_circular_progress_bar"
      android:background="@drawable/main_circle_shape"
      style="?android:attr/progressBarStyleHorizontal"
      android:max="100"
      android:progress="5"/>

</LinearLayout>